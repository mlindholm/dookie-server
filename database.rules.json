{
  "rules": {
    ".read": false,
    ".write": false,
    "$uid": {
      ".read": true,
      ".write": "auth != null",
      ".validate": "$uid.length == 20"
    },
    "activities": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": "pid"
    },
    "pets": {
      ".read": true,
      ".write": "auth != null"
    },
    "userPets": {
      ".read": true,
      ".write": "auth != null"
    },
    "users": {
      ".read": true,
      ".write": "auth != null"
    }
  }
}
